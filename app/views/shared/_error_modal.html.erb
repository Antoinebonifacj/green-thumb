<!-- Plant Spacing ERROR Alert Popup, Bootstrap -->
<!-- Button trigger modal - keep button 'hidden' -->
<button id="error-modal-button" type="button" hidden class="garden-button" data-toggle="modal" data-target="#error-modal">
  Test
</button>

<!-- Modal -->
<div class="modal fade" id="error-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div id="error-modal-content" class="modal-content">
      <div id="error-modal-header" class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Whoops!</h5>
        <button id="error-modal-close-button" type="button" class="close" data-dismiss="modal" aria-label="Close" data-backdrop="false">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="error-modal-body" class="modal-body">
       You don't have enough space to plant that there! Crowded plants are unhappy plants :-(
      </div>
      <div id="error-modal-footer" class="modal-footer">
      </div>
    </div>
  </div>
</div>
