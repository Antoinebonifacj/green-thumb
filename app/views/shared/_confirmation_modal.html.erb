<!-- Generic Confirmation Modal (to replace Localhost:3000 or "Data" modals) -->
<!-- keep 'hidden' in button class unless testing -->
<button id="conf-modal-button" type="button" class="garden-button" data-toggle="modal" data-target="#conf-modal">
  Test
</button>

<!-- Modal -->
<div class="modal fade" id="conf-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div id="conf-modal-content" class="modal-content">
      <div id="conf-modal-header" class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are You Sure?</h5>
        <button id="conf-modal-close-button" type="button" class="close" data-dismiss="modal" aria-label="Close" data-backdrop="false">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="conf-modal-body" class="modal-body">
       Are you sure you want to do that?</div>
      <div id="conf-modal-footer" class="modal-footer">
        <button id="cancel-confirm-modal" type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">
          Cancel
          </button>
          <button id="confirm-confirm-modal" type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">
          Confirm
          </button>
        </div>
      </div>
  </div>
</div>
