<div class="container m-5">
  <h1><%= @plot.name %></h1>

          <h2>Here are the plants you have :</h2>
    <% @watering_groups.each do |plant_type, total_water| %>
  
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#<%= plant_type.name %>">
          <div class="plant_list">
            <p><%= plant_type.name %>: <%= total_water %>L</p>

          </div>
      </button>
      <div class="modal fade" id="<%= plant_type.name %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Watering for <%= plant_type.name %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>


  <div id='plot-container' data-plants=<%= @plants_json %> data-grid=<%= @plot.grid_cell_size_mm %> data-length=<%= @plot.length_mm %> data-width=<%= @plot.width_mm %>>
    <!-- Plants will be added here by the JS plugin-->
  </div>



  <%= link_to "Water all?", plot_complete_waterings_path(@plot),
              method: "PATCH",
              data: { modal_confirm: "You're sure that #{@plot.name} is all watered?"}, class: "garden-button" %>
</div>
